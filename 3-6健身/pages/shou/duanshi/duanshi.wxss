/* pages/shou/duanshi/duanshi.wxss */

.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  font-family: "Microsoft YaHei";
}
.content{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #999;
  display: flex;
  position: relative;

}
.imgcom{
  width:180rpx;
  height: 160rpx;
  display: flex;
  position: relative;
}
.imgcom image{
  width: 100%;
  height: 100%;
}
.itm{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color:#fff;
  font-size: 15px;
}
.tet{
   font-size: 15px;
   padding: 40rpx;
}
.tet .clo{
  font-size: 14px;
  color: #999;
}
.btns{
  width: 50%;
  text-align: center;
  line-height: 50rpx;
  margin: 20rpx auto;
  color: #fff;
  background-color: #000;
  padding: 26rpx 0;
  border-radius: 0;
  font-size: 15px;
  margin-bottom: 25%;
}
.imasa{
  width: 50rpx;
  position: absolute;
  right: 50rpx;
  font-size: 12px;
  text-align: center;
  top:50%;
  margin-top:-20rpx;
}
.imasa image{
  width: 40rpx;
  height: 40rpx;
  
}