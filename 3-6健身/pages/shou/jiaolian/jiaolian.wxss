.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img{
  width: 100%;
  height: 500rpx;
  position: relative;
}
.img image{
  width: 100%;
  height: 400rpx;
}
.touimg{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  bottom: 0%;
  left:50%;
  margin-left: -100rpx;
  background: #fff;
  padding: 8rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 15px;
  font-weight: 600;
}
.touimg image{
  width: 100%;
  height: 200rpx;
  border-radius: 50%;
}
.textcon{
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  font-size: 14px;
  color: #999;
}
.tex{
  font-size: 15px;
  font-weight: 600;
  padding: 16rpx 0;
  color: #000;
}